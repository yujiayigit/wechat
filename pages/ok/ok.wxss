.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: rgb(255, 255, 255);
  padding-top: 20rpx;
  height: 200px;
}
.commodity_attr_box{
  text-align: center;
  padding-top: 100rpx;
}
/*购物车*/
.shopCar{
	width:100%;
	height:100rpx;
	box-sizing: border-box;
	position: fixed;
	bottom: 0;
	left:0;
	z-index: 1000;
}
.carParent{
	width:100%;
	height:100rpx;
	background: #000;
	opacity: 0.7;
	box-sizing: border-box;
	position: relative;
}
.carChild{
	width:750rpx;
	height:100rpx;
	position: fixed;
	bottom:0;
	z-index: 1400;
}
.carImg{
	opacity: 1;
	float:left;
	width:100rpx;
	height:100rpx;
	border-radius: 50%;
	border:solid 1px #fff;
	text-align: center;
	line-height: 100rpx;
	background: #404040;
	box-sizing: border-box;
	padding-top: 20rpx;
	margin-left: 40rpx;
}
.sumPrice{
	width:200rpx;
	height:100rpx;
	float:left;
	box-sizing: border-box;
	color:#fff;
	line-height: 100rpx;
	padding-left:20rpx;
}
.addPay{
	float:right;
	width:200rpx;
	height:100rpx;
	box-sizing: border-box;
	color:#fff;
	line-height: 100rpx;
	text-align: center;
	font-weight: bold;
	background: #4cd964
}